<% if @medicine.errors.any? %>
<% @medicine.errors.each do |error| %>
<p><%= error.full_message %></p>
<% end %>

<% end %>


<%= form_with model: @medicine do |form| %>

    <%= form.label :title %>
    <%= form.text_field :name %>
    <%= form.text_field :price %>
    
    <%= form.submit %>
    
<% end %>